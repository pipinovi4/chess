{
    "compilerOptions": {
      "outDir": "../dist",
      "module": "commonjs",
      "target": "es6",
      "moduleResolution": "node",
      "allowJs": false,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "removeComments": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true 
    },
    "exclude": [
      "node_modules", 
      "**/*.spec.ts", 
      "out/**"
    ],
    "include": ["**/*.ts"],
  }