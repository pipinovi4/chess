{
    "compilerOptions": {
        "outDir": "../dist",
        "moduleResolution": "node",
        "allowJs": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs"
    },
    "exclude": ["node_modules", "**/*.spec.ts", "out/**"],
    "include": ["**/*.ts", "./workers/worker.js"]
}
